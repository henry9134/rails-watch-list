<div class='banner'>
  <h1 class='banner-title'>Watch List</h1>
</div>

<div class='container'>
  <p class="btn-add">
    <%= link_to 'Make a New List', new_list_path, class: 'btn btn-primary' %>
  </p>
</div>

<div class='cards'>
      <% @lists.each do |list| %>
        <div class='card-category'>
          <%= link_to list.name, list_path(list) %>
      <% if list.photo.attached? %>
        <%= cl_image_tag list.photo.key, crop: :fill, class: 'img-list' %>
      <% end %>
        </div>
      <% end %>
</div>
