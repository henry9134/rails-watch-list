<div class='banner'>
  <h1 class='banner-title'>Watch List</h1>
</div>

<div class='container'>
  <p class="btn-add">
    <%= link_to 'Make a New List', new_list_path, class: 'btn btn-primary' %>
  </p>
</div>

<div class="container">
  <h1>Your Lists</h1>
  <div class="cards-scroll">
    <% @lists.each do |list| %>
      <div class="card">
        <div class="card-content">
          <h2 class="card-title">
            <%= link_to list.name, list_path(list), class: "list-link" %>
          </h2>
          <p class="card-description"></p>
          <%= link_to 'View List', list_path(list), class: 'btn-primary' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
